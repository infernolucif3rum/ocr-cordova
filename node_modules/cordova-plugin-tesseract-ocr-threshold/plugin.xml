<?xml version='1.0' encoding='UTF-8'?>
<plugin name="cordova-plugin-tesseract-ocr-threshold" version="1.0" xmlns="http://apache.org/cordova/ns/plugins/1.0">
  <name>cordova-plugin-tesseract-ocr-threshold</name>
  <description>
		This plugin allows to recognise text from images
	</description>
  <repo>https://github.com/tomquinonero/cordova-plugin-tesseract-ocr.git</repo>
  <license>MIT</license>
  <js-module src="www/Tesseract.js" name="Tesseract">
    <clobbers target="Tesseract"/>
  </js-module>
  <engines>
    <engine name="cordova" version=">=6.4.0"/>
    <engine name="cordova-ios" version=">=4.3.0"/>
  </engines>
  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="Tesseract">
        <param name="ios-package" value="Tesseract"/>
      </feature>
    </config-file>
    <source-file src="src/ios/Tesseract.m"/>
    <header-file src="src/ios/Tesseract.h"/>
    <framework src="TesseractOCRiOS" type="podspec" spec="~> 4.0.0"/>
    <resource-file src="src/tessdata" />
  </platform>
</plugin>
